
<div class="jumbotron text-center">
  <h1>My First Bootstrap Page</h1>
  <p>Resize this responsive page to see the effect!</p> 
</div>
  
<div class="container-fluid">
  <%= form_for :article, url:article_path, method: :patch do |f| %>
    <div class="form-group">
      <label for="title">Title:</label>
      <input type="text" class="form-control" value="<%= @article['data']['title'] %>" id="title" placeholder="Enter title" name="title">
    </div>
    <div class="form-group">
      <label for="body">Body:</label>
      <textarea name="body" id="body" class="form-control"><%= @article['data']['body'] %></textarea>


    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  <% end %>
</div>